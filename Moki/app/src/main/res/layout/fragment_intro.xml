<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_intro1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/tutorial_devicebg2"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_title_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/rll_view"
            android:layout_marginBottom="@dimen/size_20dp"
            android:gravity="center_horizontal"
            android:text="Đã bao giờ em nghĩ mình sai ?"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/size_25sp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rll_intro_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_400dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_intro2"
                android:layout_width="@dimen/size_400dp"
                android:layout_height="@dimen/size_300dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/size_50dp"
                android:src="@drawable/tutorial_devicebg2" />

            <ImageView
                android:id="@+id/img_ava_2"
                android:layout_width="@dimen/size_50dp"
                android:layout_height="@dimen/size_50dp"
                android:layout_marginLeft="@dimen/size_50dp"
                android:layout_marginTop="@dimen/size_50dp"
                android:src="@drawable/ava_2" />

            <ImageView
                android:id="@+id/img_ava_3"
                android:layout_width="@dimen/size_50dp"
                android:layout_height="@dimen/size_50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_50dp"
                android:layout_marginTop="@dimen/size_300dp"
                android:src="@drawable/ava_5" />

            <ImageView
                android:id="@+id/img_ava_1"
                android:layout_width="@dimen/size_50dp"
                android:layout_height="@dimen/size_50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_120dp"
                android:layout_marginTop="@dimen/size_200dp"
                android:src="@drawable/ava_1" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_400dp">

            <ImageView
                android:id="@+id/img_intro3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/list_product2"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_bo_qua"
            android:layout_marginBottom="@dimen/size_20dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <View
                    android:id="@+id/view_1"
                    android:layout_width="@dimen/size_12dp"
                    android:layout_height="@dimen/size_12dp"
                    android:background="@drawable/hinh_tron_hong" />

                <View
                    android:id="@+id/view_2"
                    android:layout_width="@dimen/size_12dp"
                    android:layout_height="@dimen/size_12dp"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:layout_marginRight="@dimen/size_10dp"
                    android:layout_toRightOf="@id/view_1"
                    android:background="@drawable/hinh_tron_hong" />

                <View
                    android:id="@+id/view_3"
                    android:layout_width="@dimen/size_12dp"
                    android:layout_height="@dimen/size_12dp"
                    android:layout_marginRight="@dimen/size_10dp"
                    android:layout_toRightOf="@id/view_2"
                    android:background="@drawable/hinh_tron_hong" />

            </RelativeLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_bo_qua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/size_10dp"
            android:layout_marginLeft="@dimen/size_50dp"
            android:layout_marginRight="@dimen/size_50dp"
            android:background="@drawable/btn_bo_qua"
            android:text="@string/bo_qua"
            android:textColor="@color/colorWhite"
            android:visibility="invisible" />
    </RelativeLayout>


</FrameLayout>