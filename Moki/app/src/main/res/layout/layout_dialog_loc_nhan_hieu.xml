<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F5F5F5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back_dialog_nhan_hieu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/txt_title_dialog_nhan_hieu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Danh má»¥c"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/size_20sp"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_2dp"
        android:textColor="@color/colorBlack" />


    <android.support.v7.widget.SearchView
        android:id="@+id/search_nhan_hieu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/size_10dp"
        android:background="@drawable/bg_edit_txt"
        app:iconifiedByDefault="false"
        >

    </android.support.v7.widget.SearchView>

    <se.emilsjolander.stickylistheaders.StickyListHeadersListView
        android:id="@+id/list_stick_header"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="7"
        android:scrollbars="none"
         />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10">

        <Button
            android:id="@+id/btn_huy_dialog_nhan_hieu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="#F5F5F5"
            android:text="@string/huy" />

        <Button
            android:id="@+id/btn_loc_dialog_nhan_hieu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="#F5F5F5"
            android:text="@string/loc" />

    </LinearLayout>


</LinearLayout>