<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/icon_user"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/size_10dp"
        android:src="@drawable/unknown_user" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_name"
        android:layout_toRightOf="@+id/icon_user"
        android:text="@string/sap_xep_do"
        android:textSize="@dimen/size_20sp"
        android:textColor="@color/maudo"
        android:layout_centerVertical="true"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        >

        <ImageView
            android:layout_width="@dimen/size_20sp"
            android:layout_height="@dimen/size_20sp"
            android:id="@+id/icon_clock"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_clock"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 tháng trước"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/icon_clock"
            android:id="@+id/tvTimeago"/>


    </RelativeLayout>

</RelativeLayout>