<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayLight"
    android:orientation="vertical"
    tools:context="ambe.com.vn.moki.activities.ProfileActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_profile_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp"
        android:background="@color/colorWhite"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:id="@+id/img_back_profile_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:src="@drawable/icon_back_small" />

            <TextView
                android:id="@+id/txt_title_tb_profile_detail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:gravity="center"
                android:text="Cỏ 4 lá"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/size_20sp" />

            <ImageView
                android:id="@+id/img_profile_chia_se"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_30dp"
                android:layout_gravity="center|right"
                android:layout_weight="1"
                android:src="@drawable/icon_share_product" />

        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGrayLight"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_220dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorGrayLight">

                        <ImageView
                            android:id="@+id/imgview_1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_150dp"
                            android:src="@drawable/prof_bg" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_150dp"
                            android:background="#50000000">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <de.hdodenhof.circleimageview.CircleImageView

                                    android:id="@+id/circleImageView2"
                                    android:layout_width="@dimen/size_75dp"

                                    android:layout_height="@dimen/size_75dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/size_10dp"
                                    android:src="@drawable/android" />

                                <View
                                    android:id="@+id/view"
                                    android:layout_width="@dimen/size_20dp"
                                    android:layout_height="@dimen/size_20dp"
                                    android:layout_alignBottom="@+id/circleImageView2"
                                    android:layout_alignEnd="@+id/circleImageView2"
                                    android:layout_alignRight="@+id/circleImageView2"
                                    android:background="@drawable/bg_trang_thai_offline" />

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/circleImageView2"
                                    android:layout_marginLeft="@dimen/size_2dp"
                                    android:layout_toEndOf="@+id/circleImageView2"
                                    android:layout_toRightOf="@+id/circleImageView2"
                                    android:text="Offline rồi nè"
                                    android:textColor="@color/colorWhite" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="@dimen/size_20dp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="    1124 \n Sản phẩm"
                                        android:textColor="@color/colorWhite" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/size_30dp"
                                        android:text="  34 \n Điểm"
                                        android:textColor="@color/colorWhite" />
                                </LinearLayout>


                            </RelativeLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lnl_2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_40dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginTop="@dimen/size_20dp"
                            android:orientation="horizontal"
                            android:weightSum="10">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="6"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/size_20dp"
                                    android:layout_height="@dimen/size_20dp"
                                    android:layout_marginLeft="@dimen/size_20dp"
                                    android:src="@drawable/icon_rate_good_number_pressed" />

                                <TextView
                                    android:id="@+id/txt_sl_rate_good"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/size_5dp"
                                    android:text="12"
                                    android:textColor="@color/colorBlack" />

                                <ImageView
                                    android:layout_width="@dimen/size_20dp"
                                    android:layout_height="@dimen/size_20dp"
                                    android:layout_marginLeft="@dimen/size_20dp"
                                    android:src="@drawable/icon_rate_normal_number_pressed" />

                                <TextView
                                    android:id="@+id/txt_sl_rate_normal"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/size_5dp"
                                    android:text="12"
                                    android:textColor="@color/colorBlack" />

                                <ImageView
                                    android:layout_width="@dimen/size_20dp"
                                    android:layout_height="@dimen/size_20dp"
                                    android:layout_marginLeft="@dimen/size_20dp"
                                    android:src="@drawable/icon_rate_bad_number_pressed" />

                                <TextView
                                    android:id="@+id/txt_sl_rate_bad"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/size_5dp"
                                    android:text="12"
                                    android:textColor="@color/colorBlack" />
                            </LinearLayout>


                            <TextView
                                android:id="@+id/txt_xem_tat_ca_danh_gia"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:gravity="center"
                                android:text="@string/xem_tat_ca_danh_gia" />

                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/lnl_theo_doi"
                        android:layout_width="@dimen/size_150dp"
                        android:layout_height="@dimen/size_30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="135dp"
                        android:background="@drawable/bg_theo_doi"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+ Theo dõi"
                            android:textColor="@color/colorBlack" />
                    </LinearLayout>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_marginRight="@dimen/size_20dp"
                    android:layout_marginLeft="@dimen/size_20dp"
                    android:layout_marginBottom="@dimen/size_10dp"
                    android:background="@drawable/bg_theo_doi">

                    <TextView
                        android:id="@+id/txt_gioi_thieu_shop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/size_10dp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text="@string/txt_test"
                        android:textColor="@color/colorBlack" />
                </LinearLayout>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_30dp"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_marginRight="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:orientation="horizontal"
                android:weightSum="10">
                <Button
                    android:id="@+id/txt_activity_profile_san_pham"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:background="@drawable/bg_san_pham"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:text="Sản phẩm"/>


                <Button
                    android:id="@+id/txt_activity_profile_dang_theo_doi"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAllCaps="false"

                    android:background="@drawable/bg_dang_theo_doi"
                    android:textColor="@color/colorBlack"
                    android:text="@string/dang_theo_doi"/>

                <Button
                    android:id="@+id/txt_activity_profile_ng_theo_doi"
                    android:background="@drawable/bg_nguoi_theo_doi"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAllCaps="false"

                    android:textColor="@color/colorBlack"
                    android:text="@string/nguoi_theo_doi"
                    />

            </LinearLayout>


        </android.support.design.widget.AppBarLayout>



            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager_profile_detail"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/size_10dp"
                android:background="@color/colorWhite"
                android:layout_height="match_parent">
            </android.support.v4.view.ViewPager>


    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>